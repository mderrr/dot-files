configuration {
  modi: "window,drun,ssh,file-browser";
  font: "JetBrains Mono 12";
  hide-scrollbar: true;
  line-padding: 1;
  window-format: "{w}    {i}{c}   {t}";
  kb-cancel: "Escape,Alt+F1";
  color-normal: "#282c34, #abb2bf, #282c34, #e06c75, #282c34";
  color-urgent: "argb:00000000, #ffffff, argb:00000000, argb:00000000, #e29a49";
  color-active: "argb:00000000, #49bbfb, argb:00000000, argb:00000000, #e29a49";
  color-window: "#282c34, #e06c75, #e06c75";
}
